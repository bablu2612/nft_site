<div class="min-h-full flex">
  <div class="bg-white shadow-2xl rounded-xl mt-8 mx-auto flex-1 flex flex-col justify-center py-12 px-4 sm:px-6 lg:flex-none lg:px-20 xl:px-24">
    <div class="mx-auto w-full max-w-sm lg:w-96">
      <div>
        <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
            Profile Settings
        </h2>
       
      </div>
      <div class="mt-8">       
        <div class="mt-6">
            <%= form_tag do %>
                <img id="user-avatar" class="mt-2 user-avatar h-[150px] w-[150px] mx-auto rounded-full"> 
                <div id="edit-user-avatar" class="edit-icon hidden user-avatar  mt-[-150px] ml-[117px] absolute h-[150px] bg-black opacity-[0.5] w-[150px] mx-auto rounded-full">
                    <i class="fa fa-edit mt-[65px] ml-[68px]" style="color:white; font-size:24px"></i>
                </div>
                <%= file_field_tag :avatar, class:"avatar h-0 w-0 opacity-0",onchange: "updateProfile()" %>                
                
                <%= label_tag :username, "Name", class:"text-[20px] font-bold block text-sm text-gray-700"  %>
                    <%= text_field_tag :username,"",id: "username",placeholder: "Enter your name", class:" mt-4 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" %>
                </div>
                <div class="space-y-1">
                    <%= label_tag :email,"Email Address",  class:"mt-8 text-[20px] font-bold block text-sm text-gray-700"  %>
                    <%= email_field_tag :email,"",id: "email", placeholder: "Enter your email", class:"mt-4 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" %>
                </div>
                <div class="space-y-1 mt-2">
                    <button type="button" onclick="updateProfile()" id="update-profile-button" class="w-full mt-8 flex justify-center py-4 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
                        Update Profile
                    </button>
                </div>     
            <% end %>   
        </div>
    </div>    
</div>
<%= javascript_pack_tag "nft_ui" %>
<script>
openUserInfo();

$(".user-avatar").hover(function(){
    $(".edit-icon").removeClass("hidden");
},
function(){
    $(".edit-icon").addClass("hidden");
})

$("#edit-user-avatar").on("click",function () {
    $(".avatar").click();
})
</script>
